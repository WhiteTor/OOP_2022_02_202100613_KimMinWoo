과제 주제: 한류

*/
package Korean_Wave;

import java.util.*;

public class main {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("한류 문화 안내 프로그램에 오신 것을 환영합니다.");
		while (true) {
			System.out.println("원하시는 정보를 선택해주세요.");
			System.out.println("----------------------------------");
			System.out.println("1. 예시1");
			System.out.println("2. 예시2");
			System.out.println("3. 예시3");
			System.out.println("4. 예시4");
			System.out.println("5. 예시5");
			System.out.println("종료하시려면 '종료' 를 입력해주세요.");
			System.out.println("----------------------------------");
			String subject = sc.next();
			if (subject == "종료") {
				break;
				}
			else if (subject == "예시") {
				System.out.println("예시1을 안내합니다.");
				}
			else if (subject == "예시2") {
				System.out.println("예시2을 안내합니다.");
				}
			else if (subject == "예시3") {
				System.out.println("예시3을 안내합니다.");
				}
			else if (subject == "예시4") {
				System.out.println("예시4을 안내합니다.");
				}
			else if (subject == "예시5") {
				System.out.println("예시5을 안내합니다.");
				}
			else {
				System.out.println("잘못 입력하셨습니다. 다시 입력해주세요.");
				}
		}
		sc.close();
	}
}